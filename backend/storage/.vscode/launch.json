  "version": "0.2.0",
  "configurations": [
    {
      "name": "Health storage server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/server.go",
      "console": "integratedTerminal",
      "env": {
        "DATABASE_URL": "postgres://postgres:postgres-pass@localhost:5432/health_database"
      }
    },
    {
      "name": "Health storage client",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/client/client.go",
      "console": "integratedTerminal",
      "args": [
        "-name=test6",
        "-email=test6@gmail.com",
        "-password=pass6"
      ]
    },
  ],
  "compounds": [
    {
      "name": "Health storage server and client",
      "configurations": [
        "Health storage server",
        "Health storage client"
      ],
      "preLaunchTask": "",
      "stopAll": true
    }
  ]
}